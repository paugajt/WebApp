<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag(search_sections_url, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<table style="width:100">
  <thead>
    <tr>
      <th>Course</th>
      <th align="left">Section number</th>
      <th style="width:15%">Building</th>
      <th style="width:15%">Room number</th>
      <th style="width:15%">Professor</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td align=left><%= section.course.name %></td>
        <td align=left><%= section.section_number %></td>
        <td align=left><%= section.building %></td>
        <td align=left><%= section.room_number %></td>
        <td align=left><%= section.professor.name %></td>
        <td align=left><%= link_to 'Show', section %></td>
        <td align=left><%= link_to 'Edit', edit_section_path(section) %></td>
        <td align=left><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
