<p id="notice"><%= notice %></p>

<h1>Professors</h1>

<%= form_tag(search_professors_url, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<table class="table" style="width:65%">
  <thead>
    <tr>
      <th style="width:20%" >Name</th>
      <th style="width:20%" >Office</th>
      <th style="width:20%" >Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td align=left><%= professor.name %></td>
        <td align=left><%= professor.office %></td>
        <td align=left><%= professor.email %></td>
        <td ><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'New Professor', new_professor_path, :method => "get" %>