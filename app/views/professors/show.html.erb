
<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>

<p>
  <strong>Office:</strong>
  <%= @professor.office %>
</p>

<p>
  <strong>Email:</strong>
  <%= @professor.email %>
</p>

<p>
  <strong>Courses and Sections:</strong>
  <table class="table">
    <thread>
      <tr>
        <th>Course:</th>
        <th>Section Number</th>
      </tr>

      <tbody>
        <% @professor.sections.each do |section| %>
        <tr>
          <td><%= section.course.name %></td>
          <td><%= section.section_number %></td>
        </tr>
        <% end %>
      </tbody>
    
  </thread>
</table>
</p>
  


<div class="btn-group">
<button><%= link_to 'Edit', edit_professor_path(@professor) %> </button>
<button><%= link_to 'Back', professors_path %></button>
</div>
