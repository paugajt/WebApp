<!DOCTYPE html>
<html>
  <head>
    <title>Web Application: Ruby on Rails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">


    <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>


    <header class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-brand" href="#">Justin Pauga</a>
        </div>

          <!-- Collect the nav links, forms, and other content for toggling
          -->

          <ul class="nav navbar-nav">
            <li class="active"><a href="http://localhost:3000">Home</a></li>
            <li><%=link_to "Professors", professors_path%></li>
            <li><%=link_to "Courses", courses_path%></li>
            <li><%=link_to "Sections", sections_path%></li>
            <li><%=link_to "Students", students_path%></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Log out', destroy_user_session_path, method: :delete%></li>
            </ul>


        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
